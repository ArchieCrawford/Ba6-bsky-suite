{
  "name": "ba6-bsky-suite",
  "private": true,
  "scripts": {
    "dev:worker": "npm --prefix worker run dev",
    "dev:feedgen": "npm --prefix feedgen run dev",
    "dev:dashboard": "npm --prefix dashboard run dev",
    "dev": "concurrently -n worker,feedgen -c blue,green \"npm run dev:worker\" \"npm run dev:feedgen\"",
    "dev:all": "concurrently -n worker,feedgen,dashboard -c blue,green,magenta \"npm run dev:worker\" \"npm run dev:feedgen\" \"npm run dev:dashboard\"",
    "audit": "node scripts/audit-repo.mjs",
    "check:feed": "node scripts/check-feed-identity.mjs",
    "build:dashboard": "npm --prefix dashboard run build",
    "build:feedgen": "npm --prefix feedgen run build",
    "build:worker": "npm --prefix worker run build",
    "build": "npm run build:dashboard"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "supabase": "^2.72.7"
  }
}
